@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader>
        <img src="/images/logo-header.png" alt="Application logo" height="100%"/>
        <FluentLabel Typo="Typography.Header" Color="Color.Fill" Style="margin-left: 24px">Medical Equipment Management System</FluentLabel>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu/>
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <ClinicFooter/>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>